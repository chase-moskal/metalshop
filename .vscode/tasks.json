{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "install (production build)",
			"args": ["install", "--silent"],
			"isBuildCommand": true,
			"problemMatcher": ["$tsc"]
		},
		{
			"taskName": "development build",
			"args": ["run", "build-debug", "--silent"],
			"problemMatcher": ["$tsc"]
		}
	]
}
